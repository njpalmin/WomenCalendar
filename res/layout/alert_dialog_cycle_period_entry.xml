<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
	<LinearLayout  
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
	  android:gravity="center">
	  <TextView android:id="@+id/cycle_length_label"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:text="@string/cycle_length"
			android:textSize="18dip" 
			android:layout_marginLeft="4dip" 
			android:layout_gravity="center_vertical"
			android:layout_alignParentLeft="true"/>
	  <EditText android:maxLength="2" 
	  		android:inputType="number" 
	  		android:layout_width="wrap_content" 
	  		android:id="@+id/cycle_length_lalue" 
	  		android:text="28" 
	  		android:layout_height="wrap_content" 
	  		android:layout_alignParentRight="true">
	  </EditText>
	</LinearLayout>
	<LinearLayout  
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
	  android:gravity="center">
		<TextView
		    android:id="@+id/period_length_label"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:text="@string/period_length"
			android:textSize="18dip" 
			android:layout_marginLeft="4dip" 
			android:layout_gravity="center_vertical"
			android:layout_alignParentLeft="true"/>
		<EditText
		    android:id="@+id/period_length_lalue"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content" 
		    android:inputType="number"
			android:text="28"
			android:maxLength="2" 
			android:layout_alignParentRight="true"/>
	</LinearLayout>
	<LinearLayout  
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
	  android:gravity="center">
		  <CheckBox android:id="@+id/auto_forecast"
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:text="@string/auto_forecast" 
	  			android:layout_gravity="center">
		  </CheckBox>
	</LinearLayout>
</LinearLayout>
